<div class="container">
    <h5>New User</h5>
    <form action="/signup/" method="POST">
        <div class="form-group">
            <label for="fNameInput">First Name</label>
            <input type="text" name="firstName" class="form-control" id="fNameInput">
        </div>
        <div class="form-group">
            <label for="lNameInput">Last Name</label>
            <input type="text" name="lastName" class="form-control" id="lNameInput">
        </div>
        <div class="form-group">
            <label for="emailInput">Email</label>
            <input type="text" name="email" class="form-control" id="emailInput">
        </div>
        <div class="form-group">
            <label for="newUsernameInput">Username</label>
            <input type="text" name="username" class="form-control" id="newUsernameInput">
        </div>
        <div class="form-group">
            <label for="newPasswordInput">Password</label>
            <input type="password" name="password" class="form-control" id="newPasswordInput">
        </div>
        <button type="submit" class="btn" id="register-btn">Submit</button>
    </form>
</div>